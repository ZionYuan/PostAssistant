<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="1">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="89dp"
        android:layout_weight="0.17">

        <ImageButton
            android:id="@+id/more"
            style="@android:style/Widget.Holo.Light.ImageButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:background="@android:color/transparent"
            android:elevation="0dp"
            android:onClick="popupMenu"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="60dp"
            android:scaleType="fitEnd"
            app:srcCompat="@drawable/xiala"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true" />

        <ImageView

            android:id="@+id/head"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="14dp"
            android:layout_marginStart="14dp"
            android:onClick="popupMenu"
            android:clickable="true"
            android:layout_marginTop="14dp"
            android:background="@android:color/transparent"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/head" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="36dp"
            android:layout_marginLeft="29dp"
            android:layout_toEndOf="@+id/head"
            android:text="工作人员"
            android:textSize="18sp" />

    </RelativeLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="30dp"></LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#e8dcdc"></LinearLayout>

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="79dp"
        android:orientation="horizontal"
        android:rowCount="4"
        android:layout_weight="0.12">

        <ImageButton
            android:layout_width="60dp"
            android:layout_height="67dp"
            android:layout_marginLeft="15dp"
            android:layout_columnWeight="1"
            android:layout_marginRight="15dp"
            android:layout_marginTop="15dp"
            app:srcCompat="@drawable/edit"
            android:id="@+id/edit_message"
            style="@android:style/Widget.Holo.Light.ImageButton"
            android:scaleType="centerInside"
            android:background="@android:color/transparent" />




        <ImageButton
            android:layout_width="60dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="15dp"
            android:layout_height="67dp"
            android:layout_columnWeight="1"
            app:srcCompat="@drawable/find"
            android:id="@+id/imageButton4"
            style="@android:style/Widget.Holo.ImageButton"
            android:scaleType="centerInside"
            android:background="@android:color/transparent"
            android:layout_row="0"
            android:layout_column="1" />

        <ImageButton
            android:layout_width="60dp"
            android:layout_height="71dp"
            app:srcCompat="@drawable/saoma"
            android:id="@+id/imageButton5"
            android:layout_columnWeight="1"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="15dp"
            android:scaleType="centerInside"
            android:background="@drawable/saoma"
            style="@android:style/Widget.Holo.ImageButton" />

        <ImageButton
            android:id="@+id/imageButton6"
            android:layout_width="60dp"
            android:layout_height="67dp"
            android:layout_columnWeight="1"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="15dp"
            android:background="@android:color/transparent"
            android:scaleType="centerInside"
            app:srcCompat="@drawable/bangzhu" />

    </GridLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.10"
        >

        <TextView
            android:text=" 发送信息"
            android:layout_marginLeft="17dp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:id="@+id/textView5" />

        <TextView
            android:text="快递查询"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_marginLeft="35dp"
            android:id="@+id/textView6" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_marginLeft="35dp"
            android:text="扫码签收 " />

        <TextView
            android:id="@+id/textView8"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="34dp"
            android:layout_weight="1"
            android:text="  帮助" />
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#e8dcdc"></LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="30dp">

    </LinearLayout>

    <LinearLayout
        android:id="@+id/address_list"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:clickable="true"
        android:orientation="horizontal"
        android:weightSum="1">

        <ImageButton
            android:id="@+id/imageButton8"
            android:layout_width="60dp"
            android:layout_height="50dp"
            android:layout_marginTop="3dp"
            android:background="@android:color/transparent"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/tongxunlu" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="56dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="16dp"
            android:layout_weight="1"
            android:fontFamily="cursive"
            android:text="  我的通讯录"
            android:textAllCaps="false"
            android:textSize="20sp" />

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="2dp">

        <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView11"
            android:layout_weight="1" />

        <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView10"
            android:background="#e8dcdc"
            android:layout_weight="35.82" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/history"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="60dp"
            android:layout_height="50dp"
            android:layout_marginTop="3dp"
            android:layout_weight="0.00"
            android:background="@android:color/transparent"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/qianshoulishi" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="56dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="16dp"
            android:layout_weight="1"
            android:fontFamily="cursive"
            android:text="  签收历史"
            android:textAllCaps="false"
            android:textSize="20sp" />
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="2dp">

        <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView12"
            android:layout_weight="1" />

        <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView13"
            android:background="#e8dcdc"
            android:layout_weight="35.82" />
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="65dp">

        <ImageView
            android:layout_width="60dp"
            android:layout_height="50dp"
            android:layout_marginTop="3dp"
            app:srcCompat="@drawable/gongzuozongjie"
            android:id="@+id/imageView3"
            android:background="@android:color/transparent"
            android:scaleType="fitCenter" />
        <TextView
            android:text="  工作总结"
            android:layout_width="wrap_content"
            android:layout_height="56dp"
            android:id="@+id/gongzuozongjie"
            android:layout_weight="1"
            android:textSize="20sp"
            android:layout_marginTop="16dp"
            android:layout_marginLeft="5dp"
            android:textAllCaps="false"
            android:fontFamily="cursive"/>
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="2dp">

        <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView14"
            android:layout_weight="1" />

        <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView15"
            android:background="#e8dcdc"
            android:layout_weight="35.82" />
    </LinearLayout>
</LinearLayout>
