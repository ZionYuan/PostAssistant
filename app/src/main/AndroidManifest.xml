<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.yz.postassistant">
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.RECEIVE_SMS" />
    <uses-permission android:name="android.permission.GET_TASKS" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="学子驿站助手"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat.Light.NoActionBar">
        <activity android:name=".LoginActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".MainInterfaceActivity" />
        <activity android:name=".EditMessageActivity" />
        <activity
            android:name=".ExpressTrackingActivity"
            android:theme="@style/Theme.AppCompat.Light" />
        <activity
            android:name=".AddressListActivity"
            android:theme="@style/Theme.AppCompat.Light" />
        <activity
            android:name=".MessageModelActivity"
            android:theme="@style/Theme.AppCompat.Light" />
        <activity
            android:name=".SignHistoryActivity"
            android:theme="@style/Theme.AppCompat.Light" />
        <activity android:name=".RegisterActivity" />
        <activity android:name=".Register2Activity" />
        <activity android:name=".addMessageModelActivity"></activity>
        <activity
            android:name="com.mob.tools.MobUIShell"
            android:theme="@android:style/Theme.Translucent.NoTitleBar"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:windowSoftInputMode="stateHidden|adjustResize"/>
    </application>

</manifest>